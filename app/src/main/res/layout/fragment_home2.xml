<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <ImageView
        android:id="@+id/logo"
        android:background="@drawable/app_logo"
        android:layout_width="120dp"
        android:layout_marginStart="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/profil"
        android:background="@drawable/profileface"
        android:layout_width="60dp"
        android:layout_below="@+id/logo"
        android:layout_marginStart="30dp"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Hey "
        android:fontFamily="@font/gilroy_regular"
        android:textSize="16dp"
        android:layout_below="@+id/profil" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txt1"
        android:text="Raunak"
        android:fontFamily="@font/gilroy_bold"
        android:textSize="16dp"
        android:layout_below="@+id/profil" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!"
        android:layout_toEndOf="@+id/txt2"
        android:fontFamily="@font/gilroy_regular"
        android:textSize="16dp"
        android:layout_below="@+id/profil" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Lets keep the learning going!"
        android:fontFamily="@font/gilroy_regular"
        android:textSize="16dp"
        android:layout_below="@+id/txt1" />

    <ImageView
        android:id="@+id/imagev1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cardback2"
        android:layout_above="@+id/imagev2"
        android:layout_marginEnd="60dp"
        android:layout_toStartOf="@+id/imagev2"/>

    <ImageView
        android:id="@+id/imagev2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cardback2"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="-60dp"
        android:layout_marginBottom="-60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt4"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" />


</RelativeLayout>
